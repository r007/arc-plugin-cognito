    "@typescript-eslint/parser": "^5.13.0",
    "@vercel/ncc": "^0.33.3",
    "eslint": "^8.10.0",
    "eslint-plugin-github": "^4.3.5",
    "prettier": "^2.5.1",
    "typescript": "^4.6.2"
  },
  "keywords": [
    "amazon",
    "api gateway",
    "arc",
    "architect",
    "aws",
    "ci",
    "cloud functions",
    "cloud",
    "deployment",
    "lambda",
    "plugin",
