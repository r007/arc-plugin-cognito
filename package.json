{
  "name": "@r007/arc-plugin-cognito",
  "version": "1.0.0",
  "description": "Architect serverless framework plugin that defines cognito pools for your application",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
